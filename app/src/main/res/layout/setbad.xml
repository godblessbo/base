<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/msgset"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/setbadtext"
        android:textSize="30sp" />


    <!-- 一根横线 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/msgset"
        android:background="#001100"></LinearLayout>

    <Button
        android:id="@+id/msgbadbtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


    <LinearLayout
        android:id="@+id/linearlist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/msgbadbtn"
        android:layout_below="@id/msgset"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/msgbadlistview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>

</RelativeLayout>